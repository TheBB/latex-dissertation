	\pgfbox[left,top]{
	    \pgfuseshading{shading_up}
	 }
    \end{pgfpicture}
    
     \vbox to28.9pt{\vfil%
    \begin{pgfpicture}{-8.6pt}{0pt}{59.6pt}{14.9pt}
     \includegraphics[height=14.9pt]{ethlogo_white}%
    \end{pgfpicture}
