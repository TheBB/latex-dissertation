  \end{beamercolorbox}%
  
}

% Foot

\defbeamertemplate*{footline}{SAM}
{%
  \leavevmode%
  \begin{beamercolorbox}[leftskip=0pt,ht=17pt,dp=0pt,rightskip=0pt]%
  {title in head/foot}%
\begin{pgfpicture}{2pt}{0pt}{\paperwidth}{17pt}
\pgfbox[left,top]{
\pgfuseshading{shading_down}
 }
\end{pgfpicture}
   \vbox to17pt{\vfil%
   \hspace{6pt}%
   \makebox[0.3\paperwidth][l]{\insertshortauthor}
   \hspace*{6pt}
   \makebox[0.3\paperwidth]{\insertshortdate }
   \hspace*{6pt}
   \makebox[0.3\paperwidth][r]{p. \insertframenumber} 
   \hspace{6pt}%
   \vfil}%  
  \end{beamercolorbox}%
}

% Frame title

\defbeamertemplate*{frametitle}{SAM}[1][left]
{
  \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
  \@tempdima=\textwidth%
  \advance\@tempdima by\beamer@leftmargin%
  \advance\@tempdima by\beamer@rightmargin%
  \begin{beamercolorbox}[#1,wd=\the\@tempdima]{frametitle}
    \usebeamerfont{frametitle}%
    \vbox{}\vskip-1ex%
    \if@tempswa\else\csname beamer@fte#1\endcsname\fi%
    \vspace{10pt}
    \hspace{\beamer@leftmargin}\strut\insertframetitle\strut\par%
    {%
      \ifx\insertframesubtitle\@empty%
      \else%
      {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}%
      \insertframesubtitle\strut\par}%
      \fi
    }%
    \vskip-1ex%
    \if@tempswa\else\vskip-.3cm\fi
  \end{beamercolorbox}%
}

